{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "es6",
    "module": "ESNext", // 打包模块类型
    "skipLibCheck": true,
    "esModuleInterop": true, // 支持es6，commonjs模块
    "moduleResolution": "Node", // 按照node模块进行解析
    "lib": [
      "esnext",
      "dom"
    ], // 编译时用的库
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
  }
}